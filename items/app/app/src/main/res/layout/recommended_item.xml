<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#16202D"
    android:layout_marginTop="5dp"
    android:elevation="15dp"
    android:layout_marginEnd="20dp">
    <ImageView
        android:id="@+id/recommended_img"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/recommended_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Starfield"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#EAF0F3"
        app:layout_constraintTop_toBottomOf="@id/recommended_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/recommended_price"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="$100"
        android:textSize="20sp"
        android:textColor="#73962E"
        app:layout_constraintTop_toTopOf="@id/recommended_name"
        app:layout_constraintBottom_toBottomOf="@id/recommended_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>