<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1B2838">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/news_recommended_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="REOMMENDED"
                android:textSize="20sp"
                android:textColor="#C5C3C0"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/news_recommended_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toBottomOf="@id/news_recommended_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/news_newgame_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/news_recommended_recyclerview"
                app:layout_constraintStart_toStartOf="parent"
                android:text="NEW GAMES"
                android:textSize="20sp"
                android:textColor="#C5C3C0"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/news_newgame_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toBottomOf="@id/news_newgame_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>